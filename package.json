{
	"name": "airleventy",
	"version": "1.0.0",
	"description": "11ty with minimal tooling extensions. Write with Sass & modern JS.",
	"private": false,
	"main": "index.js",
	"scripts": {
		"format": "prettier --write '**/*.js' '**/*.scss' '**/*.html'",
		"build": "npm-run-all build:*",
		"watch": "npm-run-all --parallel watch:*",
		"build:sass": "sass --style=compressed assets/sass/styles.scss:assets/dist/styles.css",
		"watch:sass": "sass --watch assets/sass/styles.scss:assets/dist/styles.css",
		"build:11ty": "eleventy",
		"watch:11ty": "eleventy --serve"
	},
	"author": "Inasuma, Jupiter, Mars",
	"license": "Unlicense",
	"dependencies": {
		"@11ty/eleventy": "^0.12.1",
		"npm-run-all": "^4.1.5",
		"sass": "^1.32.8"
	},
	"devDependencies": {
		"prettier": "^2.2.1"
	}
}
